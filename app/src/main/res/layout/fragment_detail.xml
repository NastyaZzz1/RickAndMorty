<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.characterDetail.DetailFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginHorizontal="10dp" >

        <ImageView
            android:id="@+id/char_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/rounded_corners"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/char_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="Name"
            android:layout_marginTop="10sp"
            app:layout_constraintTop_toBottomOf="@+id/char_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/char_status_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="16sp"
            android:textColor="@color/green"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/char_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/char_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/char_status_t"
            app:layout_constraintStart_toEndOf="@+id/char_status_t"
            app:layout_constraintTop_toTopOf="@+id/char_status_t" />

        <TextView
            android:id="@+id/char_gender_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="16sp"
            android:textColor="@color/green"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/char_status"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/char_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/char_gender_t"
            app:layout_constraintStart_toEndOf="@+id/char_gender_t"
            app:layout_constraintTop_toTopOf="@+id/char_gender_t" />

        <TextView
            android:id="@+id/char_species_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Species"
            android:textSize="16sp"
            android:textColor="@color/green"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/char_gender"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/char_species"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Species"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/char_species_t"
            app:layout_constraintStart_toEndOf="@+id/char_species_t"
            app:layout_constraintTop_toTopOf="@+id/char_species_t" />

        <TextView
            android:id="@+id/char_location_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            app:layout_constraintTop_toBottomOf="@+id/char_species"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/char_location_name_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/char_location_title"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/char_location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/char_location_name_t"
            app:layout_constraintStart_toEndOf="@+id/char_location_name_t"
            app:layout_constraintTop_toTopOf="@+id/char_location_name_t" />

        <TextView
            android:id="@+id/char_location_type_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/char_location_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/char_location_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/char_location_type_t"
            app:layout_constraintStart_toEndOf="@+id/char_location_type_t"
            app:layout_constraintTop_toTopOf="@+id/char_location_type_t" />

        <TextView
            android:id="@+id/char_location_dimension_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dimension"
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:layout_marginTop="10sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/char_location_type"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/char_location_dimension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dimension"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/char_location_dimension_t"
            app:layout_constraintStart_toEndOf="@+id/char_location_dimension_t"
            app:layout_constraintTop_toTopOf="@+id/char_location_dimension_t" />

        <TextView
            android:id="@+id/char_episode_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Episode"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            app:layout_constraintTop_toBottomOf="@+id/char_location_dimension"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/episode_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="5sp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/char_episode_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>