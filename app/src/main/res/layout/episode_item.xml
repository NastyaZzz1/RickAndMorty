<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="5dp" >

    <TextView
        android:id="@+id/episode_name_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="16sp"
        android:textColor="@color/pink"
        android:paddingTop="10sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/episode_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/episode_name_t"
        app:layout_constraintStart_toEndOf="@+id/episode_name_t"
        app:layout_constraintTop_toTopOf="@+id/episode_name_t" />

    <TextView
        android:id="@+id/episode_air_date_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air date"
        android:textSize="16sp"
        android:textColor="@color/pink"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/episode_name"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/episode_air_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air date"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/episode_air_date_t"
        app:layout_constraintStart_toEndOf="@+id/episode_air_date_t"
        app:layout_constraintTop_toTopOf="@+id/episode_air_date_t" />

    <TextView
        android:id="@+id/episode_num_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episode"
        android:textSize="16sp"
        android:textColor="@color/pink"
        android:layout_marginTop="10sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/episode_air_date"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/episode_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episode"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/episode_num_t"
        app:layout_constraintStart_toEndOf="@+id/episode_num_t"
        app:layout_constraintTop_toTopOf="@+id/episode_num_t" />
</androidx.constraintlayout.widget.ConstraintLayout>